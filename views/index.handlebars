<img class="mx-auto d-block" src="/assets/img/burger-2.png" alt="burger" height="120" width="120">
<h1 class="text-center">Eat-Da-Burger</h1>

<div class="container">
        <div class="row mb-3">
            <div class="col-md-6 mr-3">
                <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="d-flex justify-content-between container m-2">
                    <div class="col-9 bg-white">
                        {{id}}.{{burger_name}}
                    </div>
                    <div class="col-3">
                        <button class="devourBtn" data-id="{{id}}">Devour it!</button>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
                </ul>
            </div>
            <div class="col-md-5">
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li class="list-group-item text-secondary"> {{id}}.{{burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    <div class="row text-center">
        <div class="col-12">
            <textarea class="" name="burgerName" id="burger-name" cols="60" rows="2"></textarea>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-12">
            <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
        </div>
    </div>
    <div class="row  text-center">
        <div class="col-12">
            <small>Enter a burger you want to eat, Click the "Submit" button </small>
        </div>
    </div>
</div>
<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content bg-light border border-danger">
            <div class="modal-header font-weight-bold">
                <p>Please enter a burger name to devour!!</p>
                <button type="button" class="close text-danger" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>

        </div>
    </div>
</div>