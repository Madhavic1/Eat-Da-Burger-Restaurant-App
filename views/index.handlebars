<img class="mx-auto d-block" src="/assets/img/burger-2.png" alt="burger" height="120" width="120">
<h1 class="text-center">Eat-Da-Burger</h1>
<ul>
    {{#each burgers}}
    <div class="d-flex justify-content-between container ">
        <div class="col-6">
            {{#unless devoured}}
            <div class="d-flex justify-content-between container  m-2 ">
                <div class="col-9 bg-white ">
                    {{burger_name}}
                </div>
                <div class="col-3">
                    <button class="devourBtn" data-id="{{id}}">Devour it!</button>
                </div>
            </div>
            {{/unless}}
        </div>
        <div class="col-6">
            {{#if devoured}}
            <div class="justify-content-between container  m-2 ">
                <div class="col-9 bg-white text-secondary ">
                    {{burger_name}}
                </div>
            </div>
            {{/if}}
        </div>
    </div>
    </div>
    {{/each}}
</ul>
<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <textarea class="" name="burgerName" id="burger-name" cols="70" rows="2"></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <small>Enter a burger you want to eat, Click the "Submit" button </small>
        </div>
    </div>
</div>